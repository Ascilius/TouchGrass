<Window x:Class="TouchGrass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchGrass"
        mc:Ignorable="d"
        Title="Touch Grass" Height="300" Width="500">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="goalText"
                       Text="Error: this text should not be seen"
                       Margin="5"
                       TextAlignment="Center"/>
            <TextBlock x:Name="timerText"
                       Text="Error: this text should not be seen"
                       Margin="5"
                       TextAlignment="Center"/>

            <Button x:Name="timerButton"
                    Content="Start touching grass"
                    Click="timer_Click"
                    ClickMode="Release"
                    Margin="5"
                    Width="150"/>

            <Image Source="/res/grass.png"/>
        </StackPanel>
    </Grid>

</Window>